<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/member_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/center_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- プロフィール写真 -->
            <ImageView
                android:id="@+id/card_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/ic_launcher"
                android:transitionName="@string/transaction_image" />

            <!-- 名前 -->
            <TextView
                android:id="@+id/mDetailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/card_image"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30dp"
                android:transitionName="hogehoge" />

            <!-- 生年月日 -->
            <TextView
                android:id="@+id/card_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mDetailName"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/card_image"
                android:textSize="30dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>